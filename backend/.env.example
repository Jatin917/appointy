# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=appointy
DB_USER=postgres
DB_PASSWORD=postgres

# Prisma Database URL (combine above values or use connection string)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/appointy

# Redis Configuration (for BullMQ job queue)
# Option 1 (Recommended): Use REDIS_URL - a single connection string
REDIS_URL=redis://localhost:6379
# For Redis with password: redis://:password@localhost:6379
# For Redis Cloud/Upstash: redis://default:password@host:port

# Option 2 (Fallback): Use individual settings if REDIS_URL is not set
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Feature Flags
USE_PRISMA=true  # Set to 'true' to use Prisma with Qdrant vector search, 'false' for legacy service

# Qdrant Vector Database (for semantic search)
QDRANT_URL=http://localhost:6333

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
