{
  "manifest_version": 3,
  "name": "Synapse Universal Capture",
  "description": "Right-click to save text, links, or images directly to Synapse.",
  "version": "1.0.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Synapse Universal Capture"
  }
}
